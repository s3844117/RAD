<%= form_for(cart) do |f| %>
  <% if cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
      <% cart.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :product_id %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :size%>
    <%= f.select :size, ["Small", "Medium", "Large" ]%>
  </div>

  <div class="field">
    <%= f.label :colour %>
    <%= f.select :colour, ["Black", "White"]%>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, {min: 1, max: 99, required: true}%>
  </div>

  <div class="actions">
    <%= f.submit value = "Add to Cart" %>
  </div>
<% end %>
