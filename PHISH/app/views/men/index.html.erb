<p id="notice"><%= notice %></p>

<h1>Men</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @men.each do |man| %>
    <%path = "/products/" + String(man.product_id)%>
      <div class="card">
        <img src=<%=man.product.imageSource%> alt ="" class="center" width="300" height= "300" >
        <div class="center">
          <h2><%=man.product.name%></h2>
          <p class="price">$<%=man.product.price%></p>
          <p><%=man.product.description%></p>
          <p><button>Add to Cart</button></p>
      </div>
    </div>
      <tr>
        <td><%= man.product_id%></td>
        <td><%= link_to 'Show', path %></td>
        <td><%= link_to 'Edit', edit_man_path(man) %></td>
        <td><%= link_to 'Destroy', man, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Man', new_man_path %>
