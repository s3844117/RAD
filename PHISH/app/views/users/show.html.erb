<div>
  <%= image_tag avatar_url(@user) %>
  <br>
  <br>
  <p>Name: <%=@user.name%></p>
  <p>Email: <%=@user.email%></p>
</div>
<div>
  <p><%= link_to 'Edit', edit_user_path(@user) %></p>
  <p><%= link_to 'Pending Orders', carts_path %></p>
  
